        <a class="hidden-mobile logo" href="https://mihneavisoiu.ro/" style="padding:5px;"><img src="~/images/logoFull.png" height="42px" width="auto" /></a>
        <a class="hidden-desktop hidden-tablet logo" href="https://mihneavisoiu.ro/" style="padding:5px;"><img src="~/images/logo.png" height="42px" width="auto" /></a>
        <a asp-page="/Index">Home</a>
        @{
            if (User.Identity.IsAuthenticated)
            {
                <a asp-page="/Teams/Index">Teams</a>
            }
        }
        <partial name="_LoginPartial" />
    </div>

