@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm">
    <a class="hidden-mobile" asp-area="Identity" asp-page="/Account/Manage/Index" style="float: right;" title="Manage">Profile</a>
    <!--<button type="submit" style="float: right;" class="btn btn-link navbar-btn navbar-link">Logout</button>-->
</form>
}
else
{
        <a class="hidden-mobile" style="float: right;" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a style="float: right;" asp-area="Identity" asp-page="/Account/Login">Login</a>
}