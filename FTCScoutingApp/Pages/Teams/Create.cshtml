@page
@model FTCScoutingApp.Pages.Teams.CreateModel

@{
    ViewData["Title"] = "Add a team";
}

<h2>Add a team</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2>Team information</h2>
            <div class="form-group">
                <label asp-for="Team.TeamID" class="control-label"></label>
                <input asp-for="Team.TeamID" class="form-control" />
                <span asp-validation-for="Team.TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamName" class="control-label"></label>
                <input asp-for="Team.TeamName" class="form-control" />
                <span asp-validation-for="Team.TeamName" class="text-danger"></span>
            </div>
            <link rel="stylesheet" href="~/css/toggleSwitch.css" asp-append-version="true" />
            <h2>Robot information</h2>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.StartsLatched" /> @Html.DisplayNameFor(model => model.Team.StartsLatched)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.PrefersStartingCrater" /> @Html.DisplayNameFor(model => model.Team.PrefersStartingCrater)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Team.KnownRobotProblems" class="control-label"></label>
                <input asp-for="Team.KnownRobotProblems" class="form-control" />
                <span asp-validation-for="Team.KnownRobotProblems" class="text-danger"></span>
            </div>
            <h2>Autonomy</h2>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.HasAutonomy" /> @Html.DisplayNameFor(model => model.Team.HasAutonomy)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.MovesGoldMineral" /> @Html.DisplayNameFor(model => model.Team.MovesGoldMineral)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.PlacesTeamMarker" /> @Html.DisplayNameFor(model => model.Team.PlacesTeamMarker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.ParksInCrater" /> @Html.DisplayNameFor(model => model.Team.ParksInCrater)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
