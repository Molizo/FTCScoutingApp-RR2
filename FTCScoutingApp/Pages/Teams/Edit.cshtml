@page
@model FTCScoutingApp.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Team @Html.DisplayFor(model => model.Team.TeamID) | @Html.DisplayFor(model => model.Team.TeamName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.ID" />
            <div class="form-group">
                <label asp-for="Team.TeamID" class="control-label"></label>
                <input asp-for="Team.TeamID" class="form-control" />
                <span asp-validation-for="Team.TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamName" class="control-label"></label>
                <input asp-for="Team.TeamName" class="form-control" />
                <span asp-validation-for="Team.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Wins" class="control-label"></label>
                <input asp-for="Team.Wins" class="form-control" />
                <span asp-validation-for="Team.Wins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Loses" class="control-label"></label>
                <input asp-for="Team.Loses" class="form-control" />
                <span asp-validation-for="Team.Loses" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.Ties" class="control-label"></label>
                <input asp-for="Team.Ties" class="form-control" />
                <span asp-validation-for="Team.Ties" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.StartsLatched" /> @Html.DisplayNameFor(model => model.Team.StartsLatched)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.PrefersStartingCrater" /> @Html.DisplayNameFor(model => model.Team.PrefersStartingCrater)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Team.KnownRobotProblems" class="control-label"></label>
                <input asp-for="Team.KnownRobotProblems" class="form-control" />
                <span asp-validation-for="Team.KnownRobotProblems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.HasAutonomy" /> @Html.DisplayNameFor(model => model.Team.HasAutonomy)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.MovesGoldMineral" /> @Html.DisplayNameFor(model => model.Team.MovesGoldMineral)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.PlacesTeamMarker" /> @Html.DisplayNameFor(model => model.Team.PlacesTeamMarker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Team.ParksInCrater" /> @Html.DisplayNameFor(model => model.Team.ParksInCrater)
                    </label>
                </div>
            </div>
            <h4>Administration</h4>
            <div class="form-group">
                <label asp-for="Team.AllowedUserIDs" class="control-label"></label>
                <input asp-for="Team.AllowedUserIDs" class="form-control" />
                <span asp-validation-for="Team.AllowedUserIDs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
