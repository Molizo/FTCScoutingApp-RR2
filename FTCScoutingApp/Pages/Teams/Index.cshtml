@page
@model FTCScoutingApp.Pages.Teams.IndexModel

@{
    ViewData["Title"] = "Teams";
}
<meta http-equiv="refresh" content="10">
<h1>Teams</h1>

<p>
    <a asp-page="Create">Add a team</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].StartLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].EndLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Autonomy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Latched)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Sampling)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].TeamMarker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team[0].Parking)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Team)
        {
            if (item.AllowedUserIDs.Split(';').ToList().Contains(User.Identity.Name) || User.Identity.Name == "admin@ftcscoutingapp.com")
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autonomy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latched)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sampling)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamMarker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parking)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
